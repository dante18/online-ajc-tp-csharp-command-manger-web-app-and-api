@model EatDomicile.Web.ViewModels.Burgers.BurgerViewModel

@{
    ViewData["Title"] = "Supprimer burger";
}

<div class="row">
    <div class="col-6 d-flex align-items-center justify-content-start mt-3">
        <h1>Supprimer un burger</h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end">
        <a asp-action="Index" class="btn btn-primary">Annuler et retourner sur la liste des burgers</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <h3>Êtes-vous sûr de vouloir supprimer ce burger ?</h3>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <dl class="row">
            <dt class="col-sm-4">
                Nom :
            </dt>
            <dd class="col-sm-8">
                @(Model.Name)
            </dd>
            <dt class="col-sm-4">
                Prix :
            </dt>
            <dd class="col-sm-8">
                @(Model.Price)€
            </dd>
            <dt class="col-sm-4">
                Type de burger
            </dt>
            <dd class="col-sm-8">
                @(Model.Vegetarian ? "Végétarien" : "Non végétarien")
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <div>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
