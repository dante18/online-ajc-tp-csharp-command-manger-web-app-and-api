@model EatDomicile.Web.ViewModels.Ingredients.IngredientEditViewModel

@{
    ViewData["Title"] = "Burger - Modifier ingrédient";
}

<div class="row">
    <div class="col-6 d-flex align-items-center justify-content-start mt-3">
        <h1>Modifier l'ingrédient du burger @(ViewData["burgerSelected"])</h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end">
        <a asp-action="Details" 
           asp-route-id="@(ViewData["burgerSelectedId"])"
           class="btn btn-primary">Annuler et retourner sur le detail du burger</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <form asp-action="EditIngredient" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KCal" class="control-label"></label>
                <input asp-for="KCal" class="form-control" />
                <span asp-validation-for="KCal" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAllergen" /> @Html.DisplayNameFor(model => model.IsAllergen)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

