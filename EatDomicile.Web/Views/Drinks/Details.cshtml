@model EatDomicile.Web.ViewModels.Drinks.DrinkDetailsViewModel

@{
    this.ViewBag.Title = Model.Name;
    this.Layout = "_Layout";
}
<div>
    <h4>@(this.Model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Prix :
        </dt>
        <dd class = "col-sm-10">
            @(Model.Price)€
        </dd>
        <dt class = "col-sm-2">
            KCal :
        </dt>
        <dd class = "col-sm-10">
            @(Model.KCal)
        </dd>
        <dt class = "col-sm-2">
            Type de boisson
            </dt>
        <dd class = "col-sm-10">
            @(Model.Fizzy ? "Pétillant" : "Non Pétillant")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@(Model.Id) " class="btn btn-warning">Modifier</a>
     - 
    <a asp-action="Index" class="btn btn-info">Retour</a>
</div>
