@model EatDomicile.Web.ViewModels.Orders.OrderProductDeleteViewModel

@{
    ViewData["Title"] = "Commande - Suppression produit";
}

<div class="row">
    <div class="col-6 d-flex align-items-center justify-content-start mt-3">
        <h1>Suppression du produit de la commande n°@(ViewData["orderSelected"])</h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end">
        <a asp-action="Details"
           asp-route-id="@(ViewData["orderSelectedId"])"
           class="btn btn-primary">Annuler et retourner sur le detail de la commande</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <h3>Êtes-vous sûr de vouloir supprimer ce produit de la commande ?</h3>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <dl class="row">
            <dt class="col-sm-4">
                Nom :
            </dt>
            <dd class="col-sm-8">
                @(Model.Name)
            </dd>
            <dt class="col-sm-4">
                Prix :
            </dt>
            <dd class="col-sm-8">
                @(Model.Price)
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <div>
            <form asp-action="DeleteProductConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="OrderId"/>
                <div class="form-group">
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>