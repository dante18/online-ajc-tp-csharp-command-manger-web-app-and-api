@model EatDomicile.Web.ViewModels.Users.UsersAddressViewModel

@{
    ViewData["Title"] = "User - Suppression addresse";
}

<div class="row">
    <div class="col-6 d-flex align-items-center justify-content-start mt-3">
        <h1>Suppression l'addresse du user @(ViewData["userSelected"])</h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end">
        <a asp-action="Details"
           asp-route-id="@(ViewData["userSelectedId"])"
           class="btn btn-primary">Annuler et retourner sur le detail du user</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <h3>Êtes-vous sûr de vouloir supprimer cette addresse du user ?</h3>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <dl class="row">
            <dt class="col-sm-4">
                Rue :
            </dt>
            <dd class="col-sm-8">
                @(Model.Street)
            </dd>
            <dt class="col-sm-4">
                Ville :
            </dt>
            <dd class="col-sm-8">
                @(Model.City)
            </dd>
            <dt class="col-sm-4">
                Région :
            </dt>
            <dd class="col-sm-8">
                @(Model.State)
            </dd>
            <dt class="col-sm-4">
                Code postal :
            </dt>
            <dd class="col-sm-8">
                @(Model.Zip)
            </dd>
            <dt class="col-sm-4">
                Pays :
            </dt>
            <dd class="col-sm-8">
                @(Model.Country)
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <div>
            <form asp-action="DeleteIngredientConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId"/>
                <div class="form-group">
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>