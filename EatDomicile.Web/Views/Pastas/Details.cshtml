@model EatDomicile.Web.ViewModels.Pastas.PastaDetailsViewModel

@{
    ViewData["Title"] = "Détail pastas";
}

<div class="row">
    <div class="col-6 d-flex align-items-center justify-content-start mt-3">
        <h1>Détail d'une pasta</h1>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end">
        <a asp-action="Index" class="btn btn-primary">Retourner sur la liste des pastas</a>
        <a asp-action="Edit" asp-route-id="@(Model.Id) " class="btn btn-warning ms-2">Modifier la pasta</a>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex align-items-center justify-content-start">
        <dl class="row">
            <dt class="col-sm-4">
                Nom :
            </dt>
            <dd class="col-sm-8">
                @(Model.Name)
            </dd>
            <dt class="col-sm-4">
                Prix :
            </dt>
            <dd class="col-sm-8">
                @(Model.Price)€
            </dd>
            <dt class="col-sm-4">
                Type :
            </dt>
            <dd class="col-sm-8">
                @(Model.Type)
            </dd>
            <dt class="col-sm-4">
                KCal :
            </dt>
            <dd class="col-sm-8">
                @(Model.KCal)
            </dd>
            <dt class="col-sm-4">
                Végétarien
            </dt>
            <dd class="col-sm-8">
                @(Model.Vegetarian ? "Oui" : "Non")
            </dd>
        </dl>
    </div>
</div>
